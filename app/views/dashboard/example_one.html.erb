<h1><%= @organization.name %></h1>

<ul>
  <% @organization.departments.each  do |department| %>
    <li>
      <%= department.name %>
      <ul>
        <% department.roles.each do |role| %>
          <li>
            <%= role.name %>
              <ul>
                <% role.skills.each do |skill| %>
                  <li><%= skill.name %></li>
                 <% end %>
              </ul>
          </li>
        <% end %>
      </ul>
    </li>
  <% end %>
</ul>
