<div class="job-column">
  <div class="row job-department">
    <h3 class="text-center"><%= job.department.name %></h3>
  </div>
  <hr class="job-row"/>
  <div class="row job-role">
    <h4 class="text-center"><%= job.role.name %></h4>
  </div>
  <hr class="job-row"/>
  <div class="row job-core-skills">
    <p class="text-left">
      <strong>Core <%= job.role.name %> Skills:</strong>
      <%= job.core_skills.map(&:name).join(", ") %>
    </p>
  </div>
  <hr class="job-row"/>
  <div class="row job-skills" style=<%= job.core ? 'display:none' : '' %>>
    <p class="text-left">
      <strong><%= job.department.name %> Specific Skills:</strong>
      <%= job.skills.map(&:name).join(", ") %>
    </p>
  </div>
  <div class="row">
     <p class="text-center">
      <%= link_to 'Remove', '#', onclick: "$(this).closest('div.job-column').remove(); return false;" %>
    </p>
  </div>
